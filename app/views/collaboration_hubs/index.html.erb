<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
    var collaborationCtx = document.getElementById('collabora-feddsfsdf-canva').getContext('2d');

    // Creating two gradients for each dataset
    var gradientStrokeCollaborations = collaborationCtx.createLinearGradient(0, 0, 0, 450);
    gradientStrokeCollaborations.addColorStop(0, '#33ccff');
    gradientStrokeCollaborations.addColorStop(1, '#ff99cc');

    var gradientStrokeEarnings = collaborationCtx.createLinearGradient(0, 0, 0, 450);
    gradientStrokeEarnings.addColorStop(0, '#ff99cc');
    gradientStrokeEarnings.addColorStop(1, '#33ccff');

    var collaborationChart = new Chart(collaborationCtx, {
        type: 'line',
        data: {
            labels: ['Jan', 'Feb', 'Mar'],
            datasets: [
                {
                    label: 'Number of Collaborations',
                    data: [5, 10, 15], // Example data
                    borderColor: gradientStrokeCollaborations,
                    pointBackgroundColor: gradientStrokeCollaborations,
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y',
                },
                {
                    label: 'Money Made (€)',
                    data: [1200, 1500, 1800], // Example data in Euros
                    borderColor: gradientStrokeEarnings,
                    pointBackgroundColor: gradientStrokeEarnings,
                    borderWidth: 1,
                    fill: false,
                    yAxisID: 'y1',
                }
            ]
        },
        options: {
            scales: {
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    beginAtZero: true,
                    ticks: {
                        padding: 10 // Adjust the padding as needed
                    }
                },
                y1: {
                    type: 'linear',
                    display: true,
                    position: 'right',
                    beginAtZero: true,
                    grid: {
                      drawOnChartArea: false, // Only show the grid for this axis
                    },
                    ticks: {
                        // Include a Euro sign in the ticks and add padding
                        callback: function(value, index, values) {
                            return '€' + value;
                        },
                        padding: 0 // Adjust the padding as needed
                    }
                },
                x: {
                    ticks: {
                        padding: 0 // Adds padding between the labels and the chart
                    }
                }
            },
            elements: {
                line: {
                    tension: 0.4 // Adds some curve to the line
                }
            },
            plugins: {
                legend: {
                  position: 'bottom',
                    labels: {

                        font: {
                            size: 14
                        }
                    }
                }
            }
        }
    });
});
</script>


<script>
document.addEventListener("DOMContentLoaded", function() {
    var ctx = document.getElementById('total-collab-money-pie').getContext('2d');
    var revenuePerCollabTypeChart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['Marketing', 'Product Development', 'Sales Partnerships'],
