<style>
.notification-settings {
    background: #fff;
    padding: 20px;
    border-radius: 6px;
    max-width: 500px;
    margin: auto;
    width: 700px;
    height: 500px;
    margin-top: 100px;
    margin-left: 250px;
}

h1 {
    color: #1c1e21;
    font-size: 30px;
    margin-bottom: 8px;
    font-weight: bold;
}

.notification-category {
    border-top: 1px solid #ccd0d5;
    padding-top: 16px;
    margin-top: 16px;
}

.category-header {
    display: flex;
    align-items: center;
    margin-bottom: 8px;
}

.category-title {
    font-weight: bold;
}

.category-subtitle {
    color: #606770;
    font-size: 12px;
}

.notification-method {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 8px 0;
}

.switch {
    position: relative;
    display: inline-block;
    width: 60px;
    height: 34px;
}

.switch input {
    opacity: 0;
    width: 0;
}

.slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    -webkit-transition: .4s;
    transition: .4s;
    border-radius: 34px;
}

.slider:before {
    position: absolute;
    content: "";
    height: 26px;
    width: 26px;
    left: 4px;
    bottom: 4px;
    background-color: white;
    -webkit-transition: .4s;
    transition: .4s;
    border-radius: 50%;
}

input:checked + .slider {
    background-color: #94B9FF;
}

input:focus + .slider {
    box-shadow: 0 0 1px #94B9FF;
}

input:checked + .slider:before {
    -webkit-transform: translateX(26px);
    -ms-transform: translateX(26px);
    transform: translateX(26px);
}
</style>
