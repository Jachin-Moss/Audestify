<div class="card">
    <h1>Delete Account</h1>
    <p>Are you sure you want to delete your Audestify Account?</p>
    <button id="delete-btn">Delete Account</button>
  </div>

  <!-- Confirmation Modal -->
  <div id="confirmation-modal" class="modal">
    <div class="modal-content">
      <p>Are you sure you want to delete your Audestify Account?</p>
      <div>
        <button id="confirm-delete">Yes</button>
        <button id="cancel-delete">No</button>
      </div>
    </div>
   </div>

<script src="script.js"></script>
<script>
document.addEventListener("DOMContentLoaded", function() {
  var deleteButton = document.getElementById("delete-btn");
  var modal = document.getElementById("confirmation-modal");
  var confirmButton = document.getElementById("confirm-delete");
  var cancelButton = document.getElementById("cancel-delete");

  deleteButton.addEventListener("click", function() {
    modal.style.display = "block";
  });

  confirmButton.addEventListener("click", function() {
    // Redirect to the backend endpoint for account deletion
    // window.location.href = "/account/delete";
    alert("Account deleted successfully!"); // Replace with actual deletion logic
  });

  cancelButton.addEventListener("click", function() {
    modal.style.display = "none";
  });
});
</script>

