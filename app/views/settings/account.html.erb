 <div class="cards">
    <h1> Personal Details Settings</h1>

  <main>


    <!-- Name Tab Content -->
    <section id="nameTab" class="setting tabcontent">
      <h2> Name </h2>
      <form>

        <input type="text" id="newName" name="newName" placeholder="Enter your new name">
        <button type="submit">Save</button>
      </form>
    </section>

    <!-- Email Tab Content -->
    <section id="emailTab" class="setting tabcontent">
      <h2> Email </h2>
      <form>

        <input type="email" id="newEmail" name="newEmail" placeholder="Enter your new email">
        <button type="submit">Save</button>
      </form>
    </section>

    <!-- Password Tab Content -->
    <section id="passwordTab" class="setting tabcontent">
      <h2>Change Password</h2>
      <form>
        <label for="currentPassword">Current Password</label>
        <input type="password" id="currentPassword" name="currentPassword" placeholder="Enter your current password"><br>
        <label for="newPassword">New Password</label>
        <input type="password" id="newPassword" name="newPassword" placeholder="Enter your new password"><br>
        <label for="confirmPassword">Confirm Password</label>
        <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm your new password">
        <button type="submit">Save</button>
      </form>

       <!-- Include back arrow link -->
      <div class="back-arrow">
      <%= link_to 'Back', settings_show_path %>
      </div>

    </section>
    <footer>
    <p>&copy; 2024 Audestify. All rights reserved.</p>
  </footer>

