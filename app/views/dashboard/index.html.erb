                  // Sample data for the pie chart
                  var pieData = {
                    labels: <%= (1..@media_data.length).map { |i| "Post ##{i}" }.to_json.html_safe %>,
                    datasets: [{
                      label: 'Post Performance',
                      data: <%= @media_data.map { |media| media[:insights][:total_interactions] }.to_json.html_safe %>,
                      backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',
                        'rgba(54, 162, 235, 0.6)',
                        'rgba(255, 206, 86, 0.6)',
                        'rgba(75, 192, 192, 0.6)',
                        'rgba(153, 102, 255, 0.6)',
                        'rgba(255, 159, 64, 0.6)'
                      ],
                      borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                      ],
                      borderWidth: 1
                    }]
                  };

                  // Options for the pie chart
                  var pieOptions = {
                    responsive: true,
                    maintainAspectRatio: true,
                    aspectRatio: 1.5,
                    plugins: {
                      legend: {
                        position: 'bottom'
                      }
                    }
                  };

                  // Initialize the pie chart
                  new Chart(ctxPie, {
                    type: 'pie',
                    data: pieData,
                    options: pieOptions
                  });
                });
              </script>



