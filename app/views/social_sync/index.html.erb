<h2>Add Facebook Login to your webpage</h2>

<!-- Facebook login button -->
<button id="fb-login-btn">Log in with Facebook</button>

<!-- Set the element id for the JSON response -->
<p id="profile"></p>

<script>
    (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) { return; }
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));

    window.fbAsyncInit = function() {
        FB.init({
            appId      : '3839146769738510', // Replace with your actual Facebook App ID
            cookie     : true,
            xfbml      : true,
            version    : 'v19.0' // Use the actual version you're targeting
        });

        // Attach click event listener to login button
        document.getElementById('fb-login-btn').addEventListener('click', function() {
            // Trigger login on button click
            FB.login(function(response) {
                if (response.authResponse) {
                    console.log('Welcome! Fetching your information.... ');
                    FB.api('/me', {fields: 'name,email,picture.type(large)'}, function(response) {
                        // Display name, email, and profile picture
                        document.getElementById("profile").innerHTML =
                            "Good to see you, " + response.name +
                            ". Your email address is " + response.email +
                            "<br><img src='" + response.picture.data.url + "' alt='Profile picture'>";
                    });
                } else {
                    console.log('User cancelled login or did not fully authorize.');
                }
            }, {scope: 'public_profile,email'}); // Request necessary permissions
        });
    };
</script>
